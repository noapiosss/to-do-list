@model IList<Contracts.DTO.ToDoListDTO>

@{
    ViewData["Title"] = "MyLists";
}

<link rel="stylesheet" href="~/css/my-lists.css" />

<div class="asd">
    <h1 class="display-4">Your todos</h1>
    
    <div class="to-do-lists-wrapper">
        @for(int i = 0; i < Model.Count; ++i)
        {
            <div id=@Model[i].Id class="to-to-list-card">
                <div class="card-title">
                    <div class="list-name">@Model[i].Name</div>
                    <div class="progress-wrapper">
                        <div class="progress-bar" style="width: @(100*Model[i].CompletedTasksCount/@Model[i].TasksCount)%;">
                            <span class="progress-text">@Model[i].CompletedTasksCount/@Model[i].TasksCount</span>
                        </div>
                    </div>
                    <div class="delete-button" data-id=@Model[i].Id>x</div>
                </div>

                <div class="list-description"><label>@Model[i].Description</label></div>
                <div class="list-creation-date">@Model[i].CreationDateTime.ToLocalTime().ToString("MM/dd/yyyy hh:mm")</div>
            </div>
        }

        <a href="/list/createnewlist">
            <div class="create-to-do-list">
                <label class="add-sign">+</label>
            </div>
        </a>
        
    </div>
</div>

<script src="~/js/my-lists.js"></script>